# Advent of Code Solution

# Build both parts
build:
    bazel build //:part1 //:part2

# Run a specific part with input from stdin
run PART:
    bazel run //:{{PART}}

# Test both parts with sample input
test:
    @echo "Testing Part 1:"
    @just build > /dev/null 2>&1
    @cat sample.txt | bazel-bin/part1
    @echo "\nTesting Part 2:"
    @cat sample.txt | bazel-bin/part2

# Format code
format:
    ktlint -F *.kt

# Clean build artifacts
clean:
    bazel clean
