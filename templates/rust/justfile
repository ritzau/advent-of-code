# Advent of Code Rust Solution

# Build all targets
build:
    bazel build //templates/rust/...

# Run the main verification binary
run:
    bazel run //templates/rust:main

# Run a specific part with input from stdin
run-part PART:
    bazel run //templates/rust:part{{PART}}

# Run tests
test:
    bazel test //templates/rust/...

# Format code
format:
    cargo fmt

# Run all checks (build + tests + lint)
check-all: build test check-format

# Run clippy lint
check-lint:
    cargo clippy -- -D warnings

# Check formatting without modifying files
check-format:
    @echo "Checking code formatting..."
    @cargo fmt --check

# Clean build artifacts
clean:
    bazel clean
    rm -rf target/
