# Advent of Code Solution
# All commands use Bazel for reproducible builds

# Build the solution
build:
    bazel build //templates/python:main

# Run the main verification binary
run:
    bazel run //templates/python:main

# Run a specific part with input from stdin
run-part PART:
    bazel run //templates/python:part{{PART}}

# Format code
format:
    ruff format template_python/ tests/

# Run all checks (build + tests)
check-all: build test

# Run tests only
test:
    bazel test //templates/python:template_python_test

# Clean build artifacts
clean:
    bazel clean
    rm -rf .pytest_cache/ __pycache__/ template_python/__pycache__/ tests/__pycache__/
