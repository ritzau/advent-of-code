# Advent of Code Solution
# All commands use Bazel for reproducible builds

# Build the solution
build:
    bazel build //templates/csharp:main

# Run the main verification binary
run:
    bazel run //templates/csharp:main

# Run a specific part with input from stdin
run-part PART:
    bazel run //templates/csharp:part{{PART}}

# Format code
format:
    dotnet format

# Run all checks (build + tests)
check-all: build test

# Run tests only
test:
    bazel test //templates/csharp:aoc_tests

# Clean build artifacts
clean:
    bazel clean
