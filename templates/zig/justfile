# Advent of Code Solution

# Run a specific part with input from stdin
run PART:
    zig run {{PART}}.zig

# Test both parts with sample input
test:
    @echo "Testing Part 1:"
    @cat sample.txt | zig run part1.zig
    @echo "\nTesting Part 2:"
    @cat sample.txt | zig run part2.zig

# Format code
format:
    zig fmt .
