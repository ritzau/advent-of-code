# Unit tests
genrule(
    name = "aoc_tests_bin",
    srcs = [
        "test/runtests.jl",
        "src/lib.jl",
    ],
    outs = ["run_tests.sh"],
    cmd = """
cat > $@ << 'EOF'
#!/bin/bash
SCRIPT_DIR=$$(cd "$$(dirname "$${BASH_SOURCE[0]}")" && pwd)
cd $$SCRIPT_DIR/../../../templates/julia
julia -e 'include("test/runtests.jl")'
EOF
chmod +x $@
    """,
    executable = True,
)

sh_test(
    name = "aoc_tests",
    srcs = [":aoc_tests_bin"],
)
