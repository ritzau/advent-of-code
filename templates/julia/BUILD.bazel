"""Build targets for Advent of Code Julia solution."""

# Part 1 binary - outputs only part 1 result
genrule(
    name = "part1",
    srcs = [
        "src/part1.jl",
        "src/lib.jl",
    ],
    outs = ["part1.sh"],
    cmd = """
cat > $@ << 'EOF'
#!/bin/bash
SCRIPT_DIR=$$(cd "$$(dirname "$${BASH_SOURCE[0]}")" && pwd)
cd $$SCRIPT_DIR/../../../templates/julia
julia src/part1.jl
EOF
chmod +x $@
    """,
    executable = True,
)

# Part 2 binary - outputs only part 2 result
genrule(
    name = "part2",
    srcs = [
        "src/part2.jl",
        "src/lib.jl",
    ],
    outs = ["part2.sh"],
    cmd = """
