# Advent of Code Go Solution

# Build all targets
build:
    bazel build //templates/go/...

# Run the main verification binary
run:
    bazel run //templates/go:main

# Run a specific part with input from stdin
run-part PART:
    bazel run //templates/go/cmd/template-go-part{{PART}}:part{{PART}}

# Run tests
test:
    bazel test //templates/go/...

# Format code
format:
    gofmt -w .

# Run all checks (build + tests + format)
check-all: build test check-format

# Check formatting without modifying files
check-format:
    @echo "Checking code formatting..."
    @test -z "$$(gofmt -l .)" || (echo "Format check failed. Run 'just format' to fix." && exit 1)

# Clean build artifacts
clean:
    bazel clean
