# Advent of Code Solution
# All commands use Bazel for reproducible builds

# Build the solution
build:
    bazel build //templates/zig:part1 //templates/zig:part2

# Run a specific part with input from stdin
run-part PART:
    bazel run //templates/zig:part{{PART}}

# Format code
format:
    zig fmt .

# Run all checks (build + tests)
check-all: build test

# Run tests only
test:
    bazel test //templates/zig:common_test

# Clean build artifacts
clean:
    bazel clean
    rm -rf zig-cache/ zig-out/
