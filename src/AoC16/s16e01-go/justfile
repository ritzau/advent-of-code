# Advent of Code Solution
# All commands use Nix for reproducible builds

# Build the solution
build:
    nix build

# Run the main verification binary
run:
    nix run

# Run a specific part with input from stdin
run-part PART:
    nix run .#part{{PART}}

# Format code
format:
    nix run .#format

# Run all checks (build + tests)
check:
    nix flake check

# Clean build artifacts
clean:
    rm -rf build/ result
