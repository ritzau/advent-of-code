{
  "name": "Advent of Code - Nix Flakes",
  "image": "nixos/nix:latest",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": false,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "postCreateCommand": "mkdir -p ~/.config/nix && echo 'experimental-features = nix-command flakes' > ~/.config/nix/nix.conf && nix profile install nixpkgs#just nixpkgs#curl",

  "customizations": {
    "vscode": {
      "extensions": [
        "jnoortheen.nix-ide",
        "skellock.just"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.watcherExclude": {
          "**/inputs/**": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/.direnv/**": true
        }
      }
    }
  },

  "remoteUser": "root",

  "mounts": [
    "source=${localEnv:HOME}/.config/aoc,target=/root/.config/aoc,type=bind,consistency=cached"
  ]
}
